<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Classe Royale{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid">
            <div class="row header">
                <div class="col-3 text-center">
                    <a href="{{ path('home') }}">
                        <img src="{{ asset('images/cr_logo_300.png') }}" class="logo-header">
                    </a>
                </div>

                {% if app.user %}
                    {% for role in app.user.roles %}
                        {% if role == "ROLE_SUPER_ADMIN" %}
                            {% set role = "admin" %}
                        {% elseif role == "ROLE_ADMIN" %}
                            {% set role = "admin" %}
                        {% elseif role == "ROLE_DIRECTOR" %}
                            {% set role = "director" %}
                        {% elseif role == "ROLE_DIRECTOR" %}
                            {% set role = "teacher" %}
                        {% else %}
                            {% set role = "parent" %}
                        {% endif %}
                    {% endfor %}
                {% endif %}

                <div class="tab-background col-3 text-center pt-3">
                    {% if app.user %}
                        {% for role in app.user.roles %}
                            {% if role == "ROLE_DIRECTOR" %}
                                <a href="{{ path('director') }}">Direction</a>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="tab-background col-3 text-center pt-3">
                    {% set noAdmin = 0 %}
                    {% if app.user %}
                        {% for role in app.user.roles %}
                            {% if role == "ROLE_ADMIN" %}
                                <a href="{{ path('admin') }}">Administration</a>
                            {% endif %}
                        {% else %}
                            {% set noAdmin = 1 %}
                        {% endfor %}
                        {% if noAdmin == 1 %}
                            Cartes
                        {% endif %}
                    {% endif %}
                </div>
                <div class="tab-background col-3 text-center pt-3">
                    {% if app.user %}
                        <a href="{{ path('user_show', {'id' : app.user.id}) }}">{{ app.user.firstname }}</a>
                         - <a href="{{ path('app_logout') }}">d√©connexion</a>
                    {% else %}
                    <a href="{{ path('app_login') }}">Connexion</a>
                    {% endif %}
                </div>
            </div>

            <div class="row main justify-content-center">
                <div class="col-12">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success text-center mt-1 alert-dismissible fade show">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
                {% for message in app.flashes('danger') %}
                    <div class="alert alert-danger text-center mt-1 alert-dismissible fade show">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            </div>
                <div class="col-12 p-3 p-lg-4"></div>

            {% block body %}{% endblock %}

            {% block javascripts %}
                {{ encore_entry_script_tags('app') }}
            {% endblock %}
        </div>
    </body>
</html>
