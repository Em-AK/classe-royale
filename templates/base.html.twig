<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Classe Royale{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid">
            <div class="row header">
                <div class="col-3 text-center">
                    <a href="{{ path('home') }}">
                        <img src="{{ asset('images/cr_logo_300.png') }}" class="logo-header">
                    </a>
                </div>
                <div class="col-9">
                    <div class="row justify-content-end h-100">
                        {% if app.user %}

                            {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('admin') }}">
                                        <div class="tab-background col text-center pt-3">
                                            Administration
                                        </div>
                                </a>
                            {% endif %}

                            {% if is_granted('ROLE_DIRECTOR') %}
                                <a href="{{ path('director') }}">
                                    <div class="tab-background col text-center pt-3">
                                        Direction
                                    </div>
                                </a>
                            {% endif %}

                            {% if is_granted('ROLE_TEACHER') %}
                                <a href="{{ path('teacher') }}">
                                    <div class="tab-background col text-center pt-3">
                                        Mes classes
                                    </div>
                                </a>
                            {% endif %}

                            {% if is_granted('ROLE_PARENT') %}
                                <a href="{{ path('parent') }}">
                                    <div class="tab-background col text-center pt-3">
                                        Enfants
                                    </div>
                                </a>
                            {% endif %}

                        {% else %}
                            <a href="{{ path('infos') }}">
                                <div class="tab-background col text-center pt-3">
                                    Infos
                                </div>
                            </a>
                        {% endif %}

                        {% if app.user %}
                            <a href="{{ path('user_show', {'id' : app.user.id}) }}">
                                <div class="tab-background col text-center pt-3">
                                    {{ app.user.firstname }} {{ app.user.lastname }}
                                </div>
                            </a>
                        {% else %}
                            <a href="{{ path('app_login') }}">
                                <div class="tab-background col text-center pt-3">
                                    Connexion
                                </div>
                            </a>
                        {% endif %}

                        {% if app.user %}
                            <a href="{{ path('app_logout') }}">
                                <div class="tab-background col text-center pt-3">
                                    d√©connexion
                                </div>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="row main justify-content-center">
                <div class="col-12">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success text-center mt-1 alert-dismissible fade show">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
                {% for message in app.flashes('danger') %}
                    <div class="alert alert-danger text-center mt-1 alert-dismissible fade show">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            </div>
                <div class="col-12 p-3 p-lg-4"></div>

            {% block body %}{% endblock %}

            {% block javascripts %}
                {{ encore_entry_script_tags('app') }}
            {% endblock %}
        </div>
    </body>
</html>
