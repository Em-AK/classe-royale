<form method="post" action="{{ path('classgroup_delete', {'id': classgroup.id}) }}" onsubmit="return confirm('Voulez-vous supprimer cette classe ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ classgroup.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
