{% extends 'base.html.twig' %}

{% block title %}Nouvelle classe - Classe Royale{% endblock %}

{% block body %}
    <div class="col-12 text-center">
        <h3>Nouvelle classe</h3>
        {% if classgroup.school != null %}
            <p>{{ classgroup.school.name }}</p>
        {% else %}
            <p>Cette classe ne sera rattachée à aucune école</p>
        {% endif %}
    </div>
    <div class="col-12 col-md-10 col-lg-7 text-center dark-box mt-2">
        <div class="p-4">
            {{ include('classgroup/_form.html.twig') }}
        </div>
    </div>
    {% if classgroup.school != null %}
        <div class="col-12 text-center">
            <a href="{{ path('school_show', {'id': classgroup.school.id }) }}">{{ classgroup.school.name }}</a>
        </div>
    {% endif %}
{% endblock %}
