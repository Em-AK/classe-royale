{% extends 'base.html.twig' %}

{% block title %}Classe Royale{% endblock %}

{% block body %}
<div class="col-12 col-md-7 text-center">
    <h3>{{ classgroup.name }}</h3>

    Référence {{ classgroup.ref }}

    <br><a href="{{ path('school_show', {'id' : classgroup.school.id}) }}">{{ classgroup.school.name }}</a>
    <p class="mt-3">
        Enseignant(s) de la classe :<br>
        {% for teacher in classgroup.teacher %}
            {{ teacher.firstname }} {{ teacher.lastname }} -
            <a href="{{ path('teacher_delete', {'classgroup' : classgroup.id, 'teacher' : teacher.id}) }}">supprimer</a><br>
        {% else %}
            Aucun enseignant associé
        {% endfor %}
    </p>
    <a href="{{ path('director_addTeacher', {'id' : classgroup.id }) }}">Ajouter un enseignant</a>
    <p class="mt-3">
        <a href="{{ path('classgroup_edit', {'id': classgroup.id}) }}">Modifier</a>
    </p>

    {{ include('classgroup/_delete_form.html.twig') }}
</div>
<div class="col-12 col-md-5 text-center">
    <h3>{{ classgroup.students | length }} élèves</h3>
    {% for student in classgroup.students %}
        {{ student.firstname }} {{ student.lastname }}<br>
    {% else %}
        Aucun élève actuellement dans cette classe
    {% endfor %}
</div>
{% endblock %}
