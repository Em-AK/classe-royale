{% extends 'base.html.twig' %}

{% block title %}Classe Royale - Contact{% endblock %}

{% block body %}
    <div class="col-12 col-sm-7 col-lg-5 text-center">
        <h3 class="text-center">Contact</h3>

        <div class="form-group mt-3">
            {{ form_start(form) }}
                {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.subject, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            <input type="submit" value="Send" class="third-button py-3 px-5">
        </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
