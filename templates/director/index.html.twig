{% extends 'base.html.twig' %}

{% block title %}Classe Royale - Interface direction{% endblock %}

{% block body %}
    <div class="col-12 text-center">
        <h3 class="text-center">Interface de direction</h3>
    </div>

    <div class="col-12 text-center">
        <div class="row justify-content-center pt-2">
            {% for school in app.user.directors %}
                <a href="{{ path('school_show', {'id': school.id}) }}">
                    <div class="student-box">
                            <p>{{ school.name }}<br>
                            <span class="small-text text-white">{{ school.city }}</span><br>
                            <span class="small-text text-white">({{ school.classgroups|length }} classes)</span>
                        </p>
                    </div>
                </a>
            {% else %}
                Aucune école
            {% endfor %}
            <a href="{{ path('school_new') }}">
                <div class="student-box bg-light">
                    <div>
                        <img src="{{ asset('images/add.png') }}"
                            alt="Ajouter une école" class="add-button"
                            title="Ajouter une école">
                    </div>
                </div>
            </a>
        </div>
    </div>

{% endblock %}
