{% extends 'base.html.twig' %}

{% block title %}Les métiers - Classe Royale{% endblock %}

{% block body %}
    <div class="col-12 text-center">
        <h3>Les métiers</h3>
    </div>
    <div class="col-12 col-sm-10 col-lg-7 pt-3 text-center">
        {% for job in jobs %}
            <div class="clear-box m-2">
                {{ job.title }} : {{ job.description }} 
                {% if job.classgroup != null or is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('job_edit', {'id': job.id}) }}">Modifier</a>
                {% endif %}
            </div>
        {% else %}
            Aucun métier actuellement
        {% endfor %}
        </div>
<div class="col-12 text-center">
        {% if classgroup is null %}
            <a href="{{ path('job_new', {'classgroup': null}) }}">Ajouter un métier</a>
        {% else %}
            <a href="{{ path('job_new', {'classgroup': classgroup.id}) }}">Ajouter un métier</a>
        {% endif %}
    </div>
{% endblock %}
