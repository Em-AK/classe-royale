{% extends 'base.html.twig' %}

{% block title %}Option index{% endblock %}

{% block body %}
    <div class="col-7">
        <h3>Options disponibles</h3>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Option</th>
                <th>RÃ©glage</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for option in options %}
                <tr>
                    <td>{{ option.id }}</td>
                    <td>{{ option.property }}</td>
                    <td>{{ option.value }}</td>
                    <td>
                        <a href="{{ path('option_edit', {'id': option.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune option pour l'instant</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('option_new') }}">Ajouter une option</a>
    </div>
{% endblock %}
