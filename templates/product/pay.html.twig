{% extends 'base.html.twig' %}

{% block title %}Achat d'un article{% endblock %}

{% block body %}
    <div class="col-12 text-center">
        <h2>Achat : {{ product.name }}</h2>
    </div>
    <div class="col-2 text-center bg-light p-3">
        <a href = "{{ path('product_show', {'id': product.id, 'student': student.id}) }}">
            {% if product.avatar is empty %}
                <img src="{{ asset('images/shop.png') }}"
                        alt="{{ product.name }}"
                        class="emoticon-info">
            {% else %}
                <img src="{{ asset('product/' ~ product.avatar) }}"
                        alt="{{ product.name }}"
                        class="emoticon-info">
            {% endif %}
            <br>{{ product.name }}
        </a>
    </div>
    <div class="col-2 text-center bg-light p-3">
        <img src="{{ asset('images/greenArrow.png') }}"
                    alt="->"
                    class="emoticon-info">
    </div>
    <div class="col-2 text-center bg-light p-3">
        <a href = "{{ path('student_show', {'id': student.id}) }}">
            {% if student.avatar is empty %}
                {%  if student.isGirl == 1 %}
                    <img src="{{ asset('images/emoticon-pouces-f.png') }}"
                            alt="{{ student.firstname }} {{ student.lastname }}"
                            class="emoticon-info">
                {% else %}
                    <img src="{{ asset('images/emoticon-pouces-m.png') }}"
                            alt="{{ student.firstname }} {{ student.lastname }}"
                            class="emoticon-info">
                {% endif %}
            {% else %}
                <img src="{{ asset('avatars/' ~ student.avatar) }}"
                        alt="{{ student.firstname }} {{ student.lastname }}"
                        class="emoticon-info">
            {% endif %}
            <br>{{ student.firstname }}
        </a>
    </div>
    <div class="col-12 text-center mt-3">
    <p>Info : {{ product.description }}</p>
    Voulez-vous vraiment effectuer cet achat ?<br>

    <a href="{{ path('product_confirm', {'id': product.id, 'student': student.id}) }}">
        <button class="third-button">Oui, acheter</button>
    </a>
    <a href="{{ path('product_index', {'student': student.id}) }}">
        <button class="primary-button">Non, retour au magasin</button>
    </a>
    </div>
{% endblock %}
