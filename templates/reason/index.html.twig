{% extends 'base.html.twig' %}

{% block title %}Reason index{% endblock %}

{% block body %}
    <h1>Reason index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sentence</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reason in reasons %}
            <tr>
                <td>{{ reason.id }}</td>
                <td>{{ reason.sentence }}</td>
                <td>
                    <a href="{{ path('reason_show', {'id': reason.id}) }}">show</a>
                    <a href="{{ path('reason_edit', {'id': reason.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reason_new') }}">Create new</a>
{% endblock %}
