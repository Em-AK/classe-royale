{% extends 'base.html.twig' %}

{% block title %}Classe Royale - Création d'un compte{% endblock %}

{% block body %}
<div class="col-12 col-md-10 col-lg-7 text-center">
    <h3>Création d'un compte</h3>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.roles, {
            label: 'Je suis un '
        }) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.firstname, {
            label: 'Prénom'
        }) }}
        {{ form_row(registrationForm.lastname, {
            label: 'Nom de famille'
        }) }}
        {{ form_row(registrationForm.isWoman, {
            label: 'Cocher si vous êtes une femme'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'J\'accepte les conditions'
        }) }}

        <button type="submit" class="third-button">Créer mon compte</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
