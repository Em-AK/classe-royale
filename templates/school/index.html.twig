{% extends 'base.html.twig' %}

{% block title %}School index{% endblock %}

{% block body %}
    <h1>School index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>PostalCode</th>
                <th>City</th>
                <th>Country</th>
                <th>Phone</th>
                <th>Rne</th>
                <th>DateCreate</th>
                <th>DateModif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for school in schools %}
            <tr>
                <td>{{ school.id }}</td>
                <td>{{ school.name }}</td>
                <td>{{ school.address }}</td>
                <td>{{ school.postalCode }}</td>
                <td>{{ school.city }}</td>
                <td>{{ school.country }}</td>
                <td>{{ school.phone }}</td>
                <td>{{ school.rne }}</td>
                <td>{{ school.dateCreate ? school.dateCreate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ school.dateModif ? school.dateModif|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('school_show', {'id': school.id}) }}">show</a>
                    <a href="{{ path('school_edit', {'id': school.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('school_new') }}">Create new</a>
{% endblock %}
