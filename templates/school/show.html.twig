{% extends 'base.html.twig' %}

{% block title %}School{% endblock %}

{% block body %}
    <h1>School</h1>

    <a href="{{ path('school_edit', {'id': school.id}) }}">edit</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ school.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ school.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ school.address }}</td>
            </tr>
            <tr>
                <th>PostalCode</th>
                <td>{{ school.postalCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ school.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ school.country }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ school.phone }}</td>
            </tr>
            <tr>
                <th>Rne</th>
                <td>{{ school.rne }}</td>
            </tr>
            <tr>
                <th>DateCreate</th>
                <td>{{ school.dateCreate ? school.dateCreate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateModif</th>
                <td>{{ school.dateModif ? school.dateModif|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('school_index') }}">back to list</a>

    <a href="{{ path('school_edit', {'id': school.id}) }}">edit</a>

    {{ include('school/_delete_form.html.twig') }}
{% endblock %}
