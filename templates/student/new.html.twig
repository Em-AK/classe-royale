{% extends 'base.html.twig' %}

{% block title %}Ajouter un élève{% endblock %}

{% block body %}
<div class="col-12 col-md-7 text-center">
    <h3>{{ classgroup.name }}</h3>
    <p>Choisissez dans cette liste :</p>
    {% for availableStudent in availableStudents %}
        <a href="{{ path('student_new', {'id': classgroup.id, 'student': availableStudent.id}) }}">
            {{ availableStudent.firstname }} {{ availableStudent.lastname }}
        </a><br>
        {% else %}
        Aucun élève "hors-classe" actuellement
    {% endfor %}

    <p class="mt-3">Ou ajoutez manuellement (déconseillé) :</p>
    {{ include('student/_form.html.twig') }}

    <p class="mt-3">
        <a href="{{ path('classgroup_show', {'id' : classgroup.id}) }}">{{ classgroup.name }}</a>
    </p>

</div>
{% endblock %}
