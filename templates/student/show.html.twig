{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ student.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ student.firstname }}</td>
            </tr>
            <tr>
                <th>Ine</th>
                <td>{{ student.ine }}</td>
            </tr>
            <tr>
                <th>IsGirl</th>
                <td>{{ student.isGirl ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DateCreate</th>
                <td>{{ student.dateCreate ? student.dateCreate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateModif</th>
                <td>{{ student.dateModif ? student.dateModif|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsLead</th>
                <td>{{ student.isLead ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Xp</th>
                <td>{{ student.xp }}</td>
            </tr>
            <tr>
                <th>Gold</th>
                <td>{{ student.gold }}</td>
            </tr>
            <tr>
                <th>Elixir</th>
                <td>{{ student.elixir }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('student_index') }}">back to list</a>

    <a href="{{ path('student_edit', {'id': student.id}) }}">edit</a>

    {{ include('student/_delete_form.html.twig') }}
{% endblock %}
