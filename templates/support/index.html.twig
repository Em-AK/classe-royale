{% extends 'base.html.twig' %}

{% block title %}Classe Royale - Aide et support{% endblock %}

{% block body %}
    <div class="col-12 col-md-7 text-center">
        <h3 class="mb-4">Aide et support</h3>
       
            {% for support in supports %} 
                <a href="{{ path('support_show', {'id': support.id}) }}">
                    <div class="clear-box m-2">
                        {{ support.title }}
                    </div>
                </a>
            {% else %}
                <p>Aucune rubrique d'aide actuellement</p>
                
            {% endfor %}
            <a href="{{ path('contact') }}">
                <div class="clear-box m-2">
                    Je voudrais vous contacter
                </div>
            </a>
        
    </div>
    <div class="col-12 col-md-7 text-center">
        {% if is_granted('ROLE_ADMIN') %}
            <br><a href="{{ path('support_new') }}">Cr√©er un article</a> 
        {% endif %}
    </div>
{% endblock %}
